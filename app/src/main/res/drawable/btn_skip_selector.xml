<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
        <gradient android:angle="720" android:endColor="#dadada" android:startColor="#dadada" />

        <corners android:radius="3dp" />
    </shape></item>
    <item android:state_focused="true"><shape>
        <gradient android:angle="270" android:endColor="#dadada" android:startColor="#dadada" />

        <corners android:radius="3dp" />
    </shape></item>
    <item><shape>
        <gradient android:angle="180" android:endColor="@color/black" android:startColor="@color/black" />

        <corners android:radius="3dp" />
    </shape></item>

</selector>