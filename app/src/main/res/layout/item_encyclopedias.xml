<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/af8f8f8"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_item_encyclopedias_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:layout_marginRight="5dip"
        android:background="@drawable/ency_bg_shade"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_item_encyclopedias_picorvideo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7.5dip">

            <ImageView
                android:id="@+id/iv_item_encyclopedias_video"
                android:layout_width="22dip"
                android:layout_height="22dip"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dip"
                android:layout_marginRight="5dip"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_ency_video"
                android:visibility="gone" />

            <com.example.baseapplication.mvp.view.widget.ScaleImageView
                android:id="@+id/siv_item_encyclopedias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_item_encyclopedias_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingBottom="7.5dip"
            android:text="TextView"
            android:textColor="@color/a333333"
            android:textSize="12sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginBottom="15dip">

            <LinearLayout
                android:id="@+id/ll_item_encyclopedias_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="14dip"
                    android:layout_height="11.5dip"
                    android:layout_marginRight="5dip"
                    android:scaleType="fitXY"
                    android:src="@mipmap/pet_circle_readnum" />

                <TextView
                    android:id="@+id/tv_item_encyclopedias_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="10sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_item_encyclopedias_left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dip"
                android:layout_toLeftOf="@id/ll_item_encyclopedias_right"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.example.baseapplication.mvp.view.widget.NiceImageView
                    android:id="@+id/iv_item_encyclopedias_userimg"
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:layout_marginRight="5dip"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_image_load_circle"
                    app:is_circle="true" />

                <TextView
                    android:id="@+id/tv_item_encyclopedias_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="TextView"
                    android:textColor="@color/black"
                    android:textSize="10sp" />

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>