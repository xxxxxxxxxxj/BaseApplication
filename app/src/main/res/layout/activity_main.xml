<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/ctl_main"
        android:layout_width="match_parent"
        android:layout_height="49dip"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        tl:tl_iconHeight="22dip"
        tl:tl_iconWidth="22dip"
        tl:tl_indicator_color="@color/transparent"
        tl:tl_indicator_height="0dp"
        tl:tl_textSelectColor="@color/aD1494F"
        tl:tl_textUnselectColor="@color/a666666"
        tl:tl_textsize="12sp"
        tl:tl_underline_color="#DDDDDD"
        tl:tl_underline_height="0dp" />

    <FrameLayout
        android:id="@+id/fl_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ctl_main" />
</RelativeLayout>
